<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dr.foody.foodType.dao.FoodTypeDao">

    <select id="getList" parameterType="dr.foody.foodType.dto.FoodTypeDto"
            resultType="dr.foody.foodType.dto.FoodTypeDto">
        SELECT
        idx,
        food_idx,
        type
        FROM food_type
        <where>
            <if test="idx !=null">idx = #{idx}</if>
            <if test="foodIdx !=null">AND food_idx = #{foodIdx}</if>
            <if test="type !=null">AND type = #{type}</if>
        </where>
    </select>
    <update id="mod" parameterType="dr.foody.foodType.dto.FoodTypeDto">
        UPDATE food_type
        <set>
            <if test="foodIdx !=null"> food_idx = #{foodIdx}</if>
            <if test="type !=null">, type = #{type}</if>
        </set>
        WHERE IDX = #{idx}
    </update>
    <insert id="reg" parameterType="dr.foody.foodType.dto.FoodTypeDto"
            useGeneratedKeys="true" keyProperty="idx">
        INSERT INTO food_type
        (
        food_idx,
        type
        ) VALUES (
        #{foodIdx},
        #{type}
        )
    </insert>
    <delete id="del" parameterType="java.lang.Integer">
        DELETE FROM food_type WHERE IDX = #{idx}
    </delete>
</mapper>