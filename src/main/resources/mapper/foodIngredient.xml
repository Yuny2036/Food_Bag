<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dr.foody.foodIngredient.dao.FoodIngredientDao">

    <select id="getList" parameterType="dr.foody.foodIngredient.dto.FoodIngredientDto"
            resultType="dr.foody.foodIngredient.dto.FoodIngredientDto">
        SELECT
        idx,
        food_idx,
        ingre
        FROM food_ingredient
        <where>
            <if test="idx !=null">idx = #{idx}</if>
            <if test="foodIdx !=null">AND food_idx = #{foodIdx}</if>
            <if test="ingre !=null">AND ingre = #{ingre}</if>
        </where>
    </select>
    <update id="mod" parameterType="dr.foody.foodIngredient.dto.FoodIngredientDto">
        UPDATE food_ingredient
        <set>
            <if test="foodIdx !=null"> food_idx = #{foodIdx}</if>
            <if test="ingre !=null">, ingre = #{ingre}</if>
        </set>
        WHERE IDX = #{idx}
    </update>
    <insert id="reg" parameterType="dr.foody.foodIngredient.dto.FoodIngredientDto"
            useGeneratedKeys="true" keyProperty="idx">
        INSERT INTO food_ingredient
        (
        food_idx,
        ingre
        ) VALUES (
        #{foodIdx},
        #{ingre}
        )
    </insert>
    <delete id="del" parameterType="java.lang.Integer">
        DELETE FROM food_ingredient WHERE IDX = #{idx}
    </delete>
</mapper>