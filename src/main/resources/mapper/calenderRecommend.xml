<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dr.foody.calenderRec.dao.CalenderRecDao">

    <select id="getList" parameterType="dr.foody.calenderRec.dto.CalenderRecDto"
            resultType="dr.foody.calenderRec.dto.CalenderRecDto">
        SELECT
        idx,
        user_idx,
        occasion,
        date,
        food_idx
        FROM calender_recommended
        <where>
            <if test="idx !=null">idx = #{idx}</if>
            <if test="userIdx !=null">AND user_idx = #{userIdx}</if>
            <if test="occasion !=null">AND occasion = #{occasion}</if>
            <if test="date !=null">AND date = #{date}</if>
            <if test="foodIdx !=null">AND food_idx = #{foodIdx}</if>
        </where>
    </select>
    <update id="mod" parameterType="dr.foody.calenderRec.dto.CalenderRecDto">
        UPDATE calender_recommended
        <set>
            <if test="userIdx !=null"> user_idx = #{userIdx}</if>
            <if test="occasion !=null"> occasion = #{occasion}</if>
            <if test="date !=null">, date = #{date}</if>
            <if test="foodIdx !=null">, food_idx = #{foodIdx}</if>
        </set>
        WHERE IDX = #{idx}
    </update>
    <insert id="reg" parameterType="dr.foody.calenderRec.dto.CalenderRecDto"
            useGeneratedKeys="true" keyProperty="idx">
        INSERT INTO calender_recommended
        (
        user_idx,
        occasion,
        date,
        food_idx
        ) VALUES (
        #{userIdx},
        #{occasion},
        #{date},
        #{foodIdx}
        )
    </insert>
    <delete id="del" parameterType="java.lang.Integer">
        DELETE FROM calender_recommended WHERE IDX = #{idx}
    </delete>
</mapper>