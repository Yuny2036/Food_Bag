<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dr.foody.list_illness.dao.List_illnessDao">

    <select id="getList" parameterType="dr.foody.list_illness.dto.List_illnessDto"
            resultType="dr.foody.list_illness.dto.List_illnessDto">
        SELECT
        idx,
        code,
        name
        FROM list_illness
        <where>
            <if test="idx !=null">idx = #{idx}</if>
            <if test="code !=null">AND code = #{code}</if>
            <if test="name !=null">AND name = #{name}</if>
        </where>
    </select>
    <update id="mod" parameterType="dr.foody.list_illness.dto.List_illnessDto">
        UPDATE list_illness
        <set>
            <if test="code !=null"> code = #{code}</if>
            <if test="name !=null">, name = #{name}</if>
        </set>
        WHERE IDX = #{idx}
    </update>
    <insert id="reg" parameterType="dr.foody.list_illness.dto.List_illnessDto"
            useGeneratedKeys="true" keyProperty="idx">
        INSERT list_illness
        (
        code,
        name,
        ) VALUES (
        #{code},
        #{name},
        )
    </insert>
    <delete id="del" parameterType="java.lang.Integer">
        DELETE FROM list_illness WHERE IDX = #{idx}
    </delete>
</mapper>