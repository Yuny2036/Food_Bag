<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dr.foody.user.dao.UserDao">

    <select id="getList" parameterType="dr.foody.user.dto.UserDto"
            resultType="dr.foody.user.dto.UserDto">
        SELECT
        idx,
        email,
        nickname,
        pwd,
        pwdq,
        pwda
        FROM user
        <where>
            <if test="idx !=null">idx = #{idx}</if>
            <if test="email !=null">AND email = #{email}</if>
            <if test="nickname !=null">AND nickname = #{nickname}</if>
            <if test="pwd !=null">AND pwd = #{pwd}</if>
            <if test="pwdq !=null">AND pwdq = #{pwdq}</if>
            <if test="pwda !=null">AND pwda = #{pwda}</if>
        </where>
    </select>
    <update id="mod" parameterType="dr.foody.user.dto.UserDto">
        UPDATE user
        <set>
            <if test="email !=null"> email = #{email}</if>
            <if test="nickname !=null">, nickname = #{nickname}</if>
            <if test="pwd !=null">, pwd = #{pwd}</if>
            <if test="pwdq !=null">, pwdq = #{pwdq}</if>
            <if test="pwda !=null">, pwda = #{pwda}</if>
        </set>
        WHERE IDX = #{idx}
    </update>
    <insert id="reg" parameterType="dr.foody.user.dto.UserDto"
            useGeneratedKeys="true" keyProperty="idx">
        INSERT user
        (
        email,
        nickname,
        pwd,
        pwdq,
        pwda
        ) VALUES (
        #{email},
        #{nickname},
        #{pwd},
        #{pwdq},
        #{pwda}
        )
    </insert>
    <insert id="join" parameterType="dr.foody.user.dto.JoinDto"
            useGeneratedKeys="true" keyProperty="idx">
<!--        회원 테이블 -->
        INSERT INTO user
        (
        email,
        nickname,
        pwd,
        pwdq,
        pwda
        ) VALUES (
        #{email},
        #{nickname},
        #{pwd},
        #{pwdq},
        #{pwda}
        );
    </insert>
    <delete id="del" parameterType="java.lang.Integer">
        DELETE FROM user WHERE IDX = #{idx}
    </delete>
</mapper>