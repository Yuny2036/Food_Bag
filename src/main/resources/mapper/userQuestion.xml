<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dr.foody.userQuestion.dao.UserQuestionDao">

    <select id="getList" parameterType="dr.foody.userQuestion.dto.UserQuestionDto"
            resultType="dr.foody.userQuestion.dto.UserQuestionDto">
        SELECT
        idx,
        email,
        subject,
        content
        FROM user_question
        <where>
            <if test="idx !=null">idx = #{idx}</if>
            <if test="email !=null">AND email = #{email}</if>
            <if test="subject !=null">AND subject = #{subject}</if>
            <if test="content !=null">AND content = #{content}</if>
        </where>
    </select>
    <update id="mod" parameterType="dr.foody.userQuestion.dto.UserQuestionDto">
        UPDATE user_question
        <set>
            <if test="email !=null"> email = #{email}</if>
            <if test="subject !=null">, subject = #{subject}</if>
            <if test="content !=null">, content = #{content}</if>
        </set>
        WHERE IDX = #{idx}
    </update>
    <insert id="reg" parameterType="dr.foody.userQuestion.dto.UserQuestionDto"
            useGeneratedKeys="true" keyProperty="idx">
        INSERT INTO user_question
        (
        email,
        subject,
        content
        ) VALUES (
        #{email},
        #{subject},
        #{content}
        )
    </insert>
    <delete id="del" parameterType="java.lang.Integer">
        DELETE FROM user_question WHERE IDX = #{idx}
    </delete>
</mapper>