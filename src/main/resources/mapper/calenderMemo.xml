<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dr.foody.calenderMemo.dao.CalenderMemoDao">

    <select id="getList" parameterType="dr.foody.calenderMemo.dto.CalenderMemoDto"
            resultType="dr.foody.calenderMemo.dto.CalenderMemoDto">
        SELECT
        idx,
        user_idx,
        text,
        date
        FROM calender_memo
        <where>
            <if test="idx !=null">idx = #{idx}</if>
            <if test="userIdx !=null">AND user_idx = #{userIdx}</if>
            <if test="text !=null">AND text = #{text}</if>
            <if test="date !=null">AND date = #{date}</if>
        </where>
    </select>
    <update id="mod" parameterType="dr.foody.calenderMemo.dto.CalenderMemoDto">
        UPDATE calender_memo
        <set>
            <if test="userIdx !=null"> user_idx = #{userIdx}</if>
            <if test="text !=null"> text = #{text}</if>
            <if test="date !=null">, date = #{date}</if>
        </set>
        WHERE IDX = #{idx}
    </update>
    <insert id="reg" parameterType="dr.foody.calenderMemo.dto.CalenderMemoDto"
            useGeneratedKeys="true" keyProperty="idx">
        INSERT INTO calender_memo
        (
        user_idx,
        text,
        date
        ) VALUES (
        #{userIdx},
        #{text},
        #{date}
        )
    </insert>
    <delete id="del" parameterType="java.lang.Integer">
        DELETE FROM calender_memo WHERE IDX = #{idx}
    </delete>
</mapper>